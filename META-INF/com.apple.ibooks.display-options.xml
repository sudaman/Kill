     <!--<option name="interactive">true</option>-->
     
     <!-- allowed values for "open-to-spread" are either "true" or "false" (default dependent on orientation) -->
     <!--<option name="open-to-spread">true</option>-->
     
	 <!-- allowed values for "specified-fonts" are either "true" or "false" (with "false" as the default when unspecified) -->
